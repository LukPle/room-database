<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_info_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Task"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_info_task"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sample Task"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_info_roommate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/text_task"
            android:text="Roommate"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_roommate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_info_roommate"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@id/text_task"
            android:text="Sample Roommate"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>